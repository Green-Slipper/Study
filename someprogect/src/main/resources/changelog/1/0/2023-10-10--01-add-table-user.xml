<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   logicalFilePath="path-independent"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="a.budaeva" id="2023-10-10--01-add-table-user.001">
        <createTable schemaName="public" tableName="user">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="user_id"/>
